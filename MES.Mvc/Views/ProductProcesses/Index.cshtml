@model IEnumerable<MES.Models.ProductProcess>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "ProductProcesses", FormMethod.Get))
{


    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h5 class="panel-title">
                        Search Filters
                    </h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            @Html.Label("Reference")
                            @Html.TextBox("reference", ViewBag.reference as string, new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            @Html.Label("Machine Number")
                            @Html.TextBox("machineCode", ViewBag.machineCode as string, new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            @Html.Label("Work Order")
                            @Html.TextBox("workorderNumber", ViewBag.workorder as string, new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("From Date")
                            @Html.TextBox("fromDateTime", ViewBag.fromDateTime as string, new { @class = "form-control form_datetime" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("To Date")
                            @Html.TextBox("toDateTime", ViewBag.toDateTime as string, new { @class = "form-control form_datetime" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            <input type="submit" value="Search" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h5 class="panel-title">
                    Search Result
                </h5>
   
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover table-striped">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Machine.SerialNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Product.Reference)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Workorder.Number)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateTime)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Result)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Machine.SerialNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product.Reference)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Workorder.Number)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Result)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                        @section scripts {
                            @Scripts.Render("~/bundles/datetime")
                            <script type="text/javascript">

                                $(".form_datetime").datetimepicker({ format: 'yyyy-mm-dd hh:ii' });

                            </script>

                        }
