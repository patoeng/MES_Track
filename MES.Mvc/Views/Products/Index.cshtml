@model IEnumerable<MES.Models.Product>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h5 class="panel-title">
                    Filters
                </h5>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
                        </p>
                        @using (Html.BeginForm("Index", "Products", FormMethod.Get,new {@class="form-inline"}))
                        {
                            
                            <p>
                                Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control " })
                                <input type="submit" value="Search" class="btn btn-success  form-control" />
                            </p>
                        }
                        <table class="table table-striped table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reference)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ArticleNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sequence)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reference)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ArticleNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sequence.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                       </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>