@model IEnumerable<MES.Models.ProductionLine>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h5>Edit Production Line</h5>
            </div>
            <div class="panel-body">

                    <p>
                        @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-success"})
                    </p>
                    @using (Html.BeginForm("Index", "ProductionLines", FormMethod.Get,new {@class="form-inline"}))
                    {
                        <p>
                            Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string,new {@class= "form-control" })
                            <input type="submit" value="Search"  class="btn btn-success form-control"/>
                        </p>
                    }
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }

                    </table>
                
            </div>
        </div>
    </div>
</div>